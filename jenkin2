pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello, world!"'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Running tests..."'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying to production..."'
            }
        }
    }
}
